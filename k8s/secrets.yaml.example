apiVersion: v1
kind: Secret
metadata:
  name: llm-gateway-secrets
type: Opaque
stringData:
  # Database
  sql-host: "postgres.database.svc.cluster.local"
  sql-user: "llm_gateway"
  sql-password: "your-secure-password"
  sql-name: "llm_gateway"

  # Redis
  redis-url: "redis://redis.cache.svc.cluster.local:6379/0"

  # Authentication
  django-secret-key: "your-secure-django-secret-key-min-32-chars"
  jwt-secret: "your-secure-jwt-secret-key-min-32-chars"

  # LLM Providers (optional)
  openai-api-key: "sk-..."
  anthropic-api-key: "sk-ant-..."
